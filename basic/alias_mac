if [ -f /usr/local/opt/coreutils/libexec/gnubin/ls ];then
    # brew install coreutils
    alias ll='/usr/local/opt/coreutils/libexec/gnubin/ls -la --color=auto'
    alias ls='/usr/local/opt/coreutils/libexec/gnubin/ls --color=auto'
else if [ -f /opt/homebrew/opt/coreutils/libexec/gnubin/ls ];then
    # brew install coreutils
    alias ll='/usr/local/opt/coreutils/libexecgnubin/ls -la --color=auto'
    alias ls='/usr/local/opt/coreutils/libexecgnubin/ls --color=auto'
else
    alias ll='ls -la -G'
    alias ls='ls -G'
fi
alias gmake='make '

if [ -f ~/.alias_common ]; then
    source ~/.alias_common
fi

if [ -f ~/.alias_docker ]; then
    source ~/.alias_docker
fi
